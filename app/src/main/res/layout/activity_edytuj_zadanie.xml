<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kacperp.zarzadzaniezadaniami.EdytujZadanieActivity">

    <EditText
        android:id="@+id/Temat"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Temat"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:spinnerMode="dialog"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="99dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />


    <EditText
        android:hint="Termin (dd.mm.yyyy)"
        android:id="@+id/Termin"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="date"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:hint="Szczególy"
        android:id="@+id/Szczególy"
        android:layout_width="217dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:text=""
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/Termin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/DodajButton"
        android:layout_width="138dp"
        android:layout_height="49dp"
        android:text="DODAJ"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/Szczególy"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="EdytujZadanie" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="215dp"
        android:layout_height="16dp"
        android:text="Wybierz Przedmiot"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Temat"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Temat"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
